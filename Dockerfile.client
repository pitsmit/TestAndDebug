FROM node:18-bullseye

RUN apt-get update && apt-get install -y \
    git \
    openssh-client \
    default-jre \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Копируем всё из Server (включая api-client для тестов)
COPY Server/ ./

RUN npm ci

# Запускаем только E2E тесты
CMD ["sh", "-c", "npm run test:e2e"]