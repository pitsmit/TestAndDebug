{
  "name": "anekdot-app",
  "version": "1.0.0",
  "description": "Приложение для просмотра анекдотов",
  "author": "Smirnov Peter",
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "server": "ts-node -r tsconfig-paths/register src/server.ts",
    "test": "jest",
    "test:integration": "jest --testPathPatterns=\"integration\" --verbose",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:history": "node -e \"const fs = require('fs'); if(fs.existsSync('allure-report/history')) { const fsExtra = require('fs-extra'); fsExtra.copySync('allure-report/history', 'allure-results/history'); console.log('History copied'); } else { console.log('No history found'); }\"",
    "allure:serve": "allure serve allure-results",
    "test:with-trend": "npm run test && npm run allure:history && npm run allure:generate && npm run allure:serve",
    "test:ci": "npm run test && npm run test:integration && npm run allure:history && npm run allure:generate"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "inversify": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/cli-table2": "^0.2.6",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.29",
    "@types/pg": "^8.11.13",
    "allure-commandline": "^2.34.1",
    "allure-jest": "^3.4.1",
    "allure-js-commons": "^3.4.1",
    "cli-table3": "^0.6.5",
    "dotenv": "^16.5.0",
    "fs-extra": "^11.3.2",
    "jest": "^30.2.0",
    "jest-allure2": "^1.2.3",
    "jest-circus": "^30.2.0",
    "module-alias": "^2.2.3",
    "path-browserify": "^1.0.1",
    "pino": "^9.7.0",
    "process": "^0.11.10",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "_moduleAliases": {
    "@interfaces": "dist/Interfaces",
    "@repository": "dist/Repository",
    "@essences": "dist/Essences",
    "@services": "dist/Services",
    "@front": "dist/Front",
    "@facade": "dist/Facade",
    "@commands": "dist/Commands",
    "@index": "dist/"
  }
}
