{
  "name": "anekdot-app",
  "version": "1.0.0",
  "description": "Приложение для просмотра анекдотов",
  "author": "Smirnov Peter",
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "api:generate": "openapi-generator-cli generate -i main.yml -g nodejs-express-server -o ./src/generated-api --additional-properties=supportsES6=true",
    "build": "babel src --out-dir dist --extensions \".ts,.tsx\" --ignore \"**/__tests__/**,**/*.test.ts,**/*.spec.ts,src/generated-api/**\"",
    "build:tsc": "tsc",
    "clean": "rimraf dist",
    "test": "jest",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "jest --selectProjects e2e",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:history": "node -e \"const fs = require('fs'); if(fs.existsSync('allure-report/history')) { const fsExtra = require('fs-extra'); fsExtra.copySync('allure-report/history', 'allure-results/history'); console.log('History copied'); } else { console.log('No history found'); }\"",
    "allure:serve": "allure serve allure-results",
    "test:with-trend": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run allure:history && npm run allure:generate && npm run allure:serve",
    "test:ci": "npm run test && npm run test:integration && npm run test:e2e && npm run allure:history && npm run allure:generate"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "https-proxy-agent": "^7.0.6",
    "inversify": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/plugin-transform-private-methods": "^7.27.1",
    "@babel/plugin-transform-private-property-in-object": "^7.27.1",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@types/cheerio": "^0.22.35",
    "@types/cli-table2": "^0.2.6",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.29",
    "@types/pg": "^8.11.13",
    "allure-commandline": "^2.34.1",
    "allure-jest": "^3.4.1",
    "allure-js-commons": "^3.4.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "cli-table3": "^0.6.5",
    "cross-env": "^10.1.0",
    "dotenv": "^16.5.0",
    "fs-extra": "^11.3.2",
    "jest": "^30.2.0",
    "jest-allure2": "^1.2.3",
    "jest-circus": "^30.2.0",
    "module-alias": "^2.2.3",
    "path-browserify": "^1.0.1",
    "pino": "^9.7.0",
    "process": "^0.11.10",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
