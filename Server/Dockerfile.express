FROM node:20-bullseye
WORKDIR /app

COPY package*.json ./
COPY babel.config.js ./
COPY .babelignore ./
COPY tsconfig.json ./

RUN npm install

COPY src ./src

COPY framework-express ./framework-express

WORKDIR /app/framework-express
RUN npm install

WORKDIR /app
RUN npm run build

EXPOSE 3000

ENV HOST=postgres
ENV PORT=5432
ENV DATABASE_NAME=anekdot_test
ENV USER=postgres
ENV PASSWORD=password

WORKDIR /app/framework-express
CMD ["node", "index.js"]